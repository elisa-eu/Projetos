#Calculadora simples
lista = []
valores = []
def linha(tam=40):
    print("="*tam)

def cabecalho(txt):
    linha()
    print(txt.center(40))
    linha()

cabecalho("MINHA CALCULADORA")

def menu(lista):
    c = 1
    for item in lista:
        print(f"{c}- {item}")
        c += 1
    while True:
        try:
            opc = int(input("SUA ESCOLHA: "))
            break
        except:
            print("Digite um numero inteiro válido!")
    return opc

def soma(*valores):
    resultado = 0
    for valor in valores:
        resultado += valor
    print(f"O resultado da soma é {resultado}")

def subtracao(*valores):
    resultado = valores[0]
    for valor in valores[1:]:
        resultado -= valor
    print(f"O resultado da subtração é {resultado}")

def multiplicacao(*valores):
    resultado = 1
    for valor in valores:
        resultado *= valor
    print(f"O resultado da multiplicação é {resultado}")

def divisao(*valores):
    resultado = valores[0]
    for valor in valores[1:]:
        resultado /= valor
    print(f"O resultado da divisão é {resultado}")

escolha = menu(["SOMA", "SUBTRAÇÃO", "MULTIPLICAÇÃO", "DIVISÃO"])
if escolha == 1:
    while True:
        numero = int(input("Digite um número para somar a outro(s): "))
        print("Se quiser PARAR de digitar, DIGITE 0")
        valores.append(numero)
        if numero == 0:
            break
    soma(*valores)

elif escolha == 2:
    while True:
        numero = int(input("Digite o valor para subtrair: "))
        print("Se quiser PARAR de digitar, DIGITE 0")
        valores.append(numero)
        if numero == 0:
            break
    subtracao(*valores)

elif escolha == 3:
    while True:
        numero = int(input("Digite o número que deseja multiplicar: "))
        print("Se quiser PARAR de digitar, DIGITE 1")
        valores.append(numero)
        if numero == 1:
            break
    multiplicacao(*valores)

elif escolha == 4:
    while True:
        numero = int(input("Digite o número que deseja dividir: "))
        print("Se quiser PARAR de digitar, DIGITE 1")
        valores.append(numero)
        if numero == 1:
            break
    divisao(*valores)

else:
    print("Escolha INVÁLIDA")
