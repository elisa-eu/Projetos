def soma(*valores):
    resultado = 0
    for valor in valores:
        resultado += valor
    return resultado

def subtracao(*valores):
    resultado = valores[0]
    for valor in valores[1:]:
        resultado -= valor
    return resultado

def multiplicacao(*valores):
    resultado = 1
    for valor in valores:
        resultado *= valor
    return resultado

def divisao(*valores):
    resultado = valores[0]
    for valor in valores[1:]:
        resultado /= valor
    return f"{resultado:.2f}"

print("=====CALCULADORA=====")
print("=" * 21)

expressao = int(input(f"QUAL EXPRESSAO DESEJA FAZER?\nSOMA = 1\nSUBTRAÇÃO = 2\nMULTIPLICAÇÃO = 3\nDIVISÃO = 4\nSUA ESCOLHA: "))

if expressao == 1:
    print("SUA ESCOLHA FOI SOMA")
    print("=" * 25)
    numeros = []
    numero = int(input("DIGITE UM NÚMERO: "))
    print("se não tiver mais números para digitar, DIGITE 0")
    while numero != 0:
        numeros.append(numero)
        numero = int(input("DIGITE UM NÚMERO: "))
    resultado1 = soma(*numeros)
    print("="*25)
    print(f"O resultado é: {resultado1}")

elif expressao == 2:
    print("SUA ESCOLHA FOI SUBTRAÇÃO")
    print("=" * 25)
    numeros = []
    numero = int(input("DIGITE UM NÚMERO: "))
    print("se não tiver mais números para digitar, DIGITE 0")
    while numero != 0:
        numeros.append(numero)
        numero = int(input("DIGITE UM NÚMERO: "))
    resultado2 = subtracao(*numeros)
    print("=" * 25)
    print(f"O resultado é: {resultado2}")

elif expressao == 3:
    print("SUA ESCOLHA FOI MULTIPLICAÇÃO")
    print("=" * 25)
    numeros = []
    numero = int(input("DIGITE UM NÚMERO: "))
    print("se não tiver mais números para digitar, DIGITE 0")
    while numero != 0:
        numeros.append(numero)
        numero = int(input("DIGITE UM NÚMERO: "))
    resultado3 = multiplicacao(*numeros)
    print("=" * 25)
    print(f"O resultado é: {resultado3}")

elif expressao == 4:
    print("SUA ESCOLHA FOI DIVISÃO")
    print("=" * 25)
    numeros = []
    numero = int(input("DIGITE UM NÚMERO: "))
    print("se não tiver mais números para digitar, DIGITE 0")
    while numero != 0:
        numeros.append(numero)
        numero = int(input("DIGITE UM NÚMERO: "))
    resultado4 = divisao(*numeros)
    print("=" * 25)
    print(f"O resultado é: {resultado4}")

else:
    print("Expressão INVÁLIDA")
